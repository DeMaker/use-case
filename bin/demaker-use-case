#!/usr/bin/env php
<?php

require 'vendor/autoload.php';

use DeSmart\DeMaker\UseCase\Command\MakeUseCase;
use Symfony\Component\Console\Application;

class Boot
{

    /**
     * @var Application
     */
    protected $app;

    public function __construct()
    {
        $this->app = new Application;
    }

    public function registerCommands()
    {
        $this->app->add(new MakeUseCase);
    }

    public function run()
    {
        $this->registerCommands();

        $this->app->run();
    }
}

$boot = new Boot;
$boot->run();
